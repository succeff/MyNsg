<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ff4800"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/backs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:drawableLeft="@drawable/ic_action_back"
                android:textColor="#f1f1ea"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    <ImageView
        android:id="@+id/imaeds"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        />
    <TextView
        android:id="@+id/titleds"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="中"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:text="dasg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="26999"
        android:textColor="#ff3700"
        />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="26999"
            android:textColor="#ff3700"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送至"
            />
        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全国"
            android:gravity="center"
            android:textColor="#d4c9c6"
            android:background="#ff3700"
            />
        <TextView
            android:id="@+id/youhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="有货"
            android:textColor="#d4c9c6"
            />
        <TextView
            android:id="@+id/mianyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="免运费"
            android:textColor="#d4c9c6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评价"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好评率：100%"
            android:gravity="center"
            android:textColor="#d1d1c8"
            android:background="#ff3700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0人评价"
            android:gravity="center"
            android:textColor="#d1d1c8"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/ic_normal_dot_left"
        android:text="商品介绍"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_goods_store"
        android:text="好商城v5"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_normal_title_left"
        android:drawableRight="@drawable/ic_normal_dot_left"
        android:text="店铺推荐"
        />
    <ListView
        android:id="@+id/list_cat"
        android:layout_width="match_parent"
        android:layout_height="220dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客服"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_goods_kefu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购物车"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_goods_cart"
            />
        <TextView
            android:id="@+id/addcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加入购物车"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#eaeae8"
            android:drawableTop="@drawable/ic_action_collection"
            android:background="#ff6f00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即购买"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_goods_store"
            android:background="#ff0900"
            />
    </LinearLayout>
</LinearLayout>
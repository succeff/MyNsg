<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD3000">
        <TextView
            android:id="@+id/user_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/ic_default_user_head"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="点击登录"
            android:textSize="14sp"
            android:textColor="#f5f5f0"
            />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C02A00"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:text="商品收藏"
        android:textSize="15sp"
        android:textColor="#f5f5f0"
            android:gravity="center"
        android:drawableTop="@drawable/ic_collection_goods"
        />
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="店铺收藏"
            android:textSize="15sp"
            android:textColor="#f5f5f0"
            android:gravity="center"
            android:drawableTop="@drawable/ic_collection_store"
            />
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的足迹"
            android:textSize="15sp"
            android:textColor="#f5f5f0"
            android:gravity="center"
            android:drawableTop="@drawable/ic_user_footprint"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_user_order"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_normal_dot_left"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="全部订单"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_pay"
                    android:text="未付款"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_drive"
                    android:text="待发货"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_receipt"
                    android:text="待收货"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_comment"
                    android:text="待评价"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_refund"
                    android:text="退款/货"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_user_property"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_normal_dot_left"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="我的财产"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_property_card"
                    android:text="预存款"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_order_wait_drive"
                    android:text="充值卡"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_property_vouchers"
                    android:text="代金券"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_property_red"
                    android:text="红包"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_user_property_integral"
                    android:text="积分"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_user_address"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_normal_dot_left"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="收货地址"
            />

    </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_user_setting"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_normal_dot_left"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="系统设置"
            />



</LinearLayout>
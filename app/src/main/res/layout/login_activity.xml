<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ff4800"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deng_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:drawableLeft="@drawable/ic_action_back"
            android:textColor="#f1f1ea"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
       android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_edit_username"
        android:hint="请输入账号"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_edit_password"
        android:hint="请输入密码"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#fafaf8"
        android:background="#ff4800"
        />
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/zhc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_weight="1"
        android:text="注册账号"
        android:textSize="20sp"
        android:textColor="#ff4800"
        />
        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="找回密码"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#ff4800"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>

</LinearLayout>